<h2><%=t :my_trusted_sites %></h2>

<p><%=t :identity_request_answered_without_interaction %><br />
<%=t :alter_release_policies_here %></p>

<% unless @sites.empty? %>
<ul>
  <% @sites.each do |site| %>
  <li>
    <h3><%=h extract_host(site.url) %> <span class="note">(<%=h site.persona.title %>)</span></h3>
    <div class="options">
      <%= link_to t(:edit_link), edit_account_site_path(site), :class => 'btn btn-primary btn-xs' %>
      <%= button_to t(:delete_link), {:controller => :sites, :action => 'destroy', :id => site }, :confirm => t(:really_want_to_delete_trust_for_site, :site => h(extract_host(site.url))), :method => :delete, :class => 'btn btn-danger btn-xs' %>

    </div>
  </li>
  <% end %>
</ul>
<% else %>
<p><%=t :no_entries_yet %></p>
<% end %>
