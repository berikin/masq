<h2><%=t :edit_your_persona, :title => h(persona.title) %></h2>
<%= error_messages_for persona %>

<%= form_for [:account, persona], :html => {:class => 'form-horizontal'} do |f| %>
  <%= render :partial => 'form', :object => f %>
  <br />
  <div class="row">
    <div class="col-sm-4">
      <%= f.submit t(:submit_update), :class => 'labelspace', :class => "btn btn-success" %>
    </div>
  </div>
  <br />
<% end %>
